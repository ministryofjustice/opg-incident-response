
upstream response {
    server {{getv "/app/host" }}:{{getv "/app/port" }};
}

server {

    listen 80 default_server;

    # Simple health check for nginx containers
    location /nginx-health {
        return 200 "healthy\n";
    }

    location /static/ {
        autoindex on;
        alias /app/opgincidentresponse/static/;
    }

    location / {
        # everything is passed to Gunicorn
        proxy_pass http://response;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

    # Comply with https://security-guidance.service.justice.gov.uk/implement-security-txt/#implementing-securitytxt
    rewrite ^/.well_known/security.txt$ https://raw.githubusercontent.com/ministryofjustice/security-guidance/main/contact/vulnerability-disclosure-security.txt permanent;
}
